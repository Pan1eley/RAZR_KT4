<Window x:Class="kt_4.BillingWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kt_4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BillingWindow">

    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DGridBilling" AutoGenerateColumns="False"  Height="421" VerticalAlignment="Center" IsReadOnly="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="id " Binding="{Binding id}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата выставления счёта" Binding="{Binding BillingDate}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="id сотрудника" Binding="{Binding EmployeeID}" Width="*"></DataGridTextColumn>
                <DataGridTemplateColumn Width="auto">

                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
