<Window x:Class="kt_4.RegistrationWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kt_4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="Регистрация" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Регистрация нового пользователя" FontSize="16" FontWeight="Bold" Margin="0,0,0,20" Width="276"/>

            <Label Content="Имя пользователя:"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10"/>
            <Label Content="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>

            <Label Content="Email:"/>
            <TextBox x:Name="EmailTextBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Зарегистрироваться" Width="150" Height="32" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
